---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props

const response = await fetch(`${window.location.origin}/api/naut`)
const data = await response.json();

import CSS from "./Card.module.scss"
---

<li class="link-card">
	<a href={href}>
		<h5>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
	<div class={CSS.code}>{data.name}</div>
</li>
